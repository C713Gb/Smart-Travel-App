<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AccountNameChangeActivity">

    <EditText
        android:id="@+id/nameChangeEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        tools:ignore="MissingConstraints"
        android:hint="Enter Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/cancelNameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameChangeEditText"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="-99dp"
        android:layout_toStartOf="@id/nameChangeEditText"
        android:background="#B9EC0707"
        android:text="Cancel"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/saveNameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameChangeEditText"
        android:layout_marginStart="-91dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@id/nameChangeEditText"
        android:background="#B990EC3F"
        android:text="Save"
        tools:ignore="MissingConstraints" />

</RelativeLayout>