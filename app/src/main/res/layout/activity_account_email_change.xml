<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AccountEmailChangeActivity">

    <EditText
        android:id="@+id/emailChangeEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:hint="Enter Email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/cancelEmailEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailChangeEditText"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="-95dp"
        android:layout_toStartOf="@id/emailChangeEditText"
        android:background="#B9EC0707"
        android:text="Cancel" />

    <Button
        android:id="@+id/saveEmailEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailChangeEditText"
        android:layout_marginStart="-89dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@id/emailChangeEditText"
        android:background="#B990EC3F"
        android:text="Save" />

</RelativeLayout>