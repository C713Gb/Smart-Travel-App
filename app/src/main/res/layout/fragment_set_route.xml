<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.SetRouteFragment"
    android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/mapbox_marker_icon_default"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/destination_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select destination"
                android:background="@drawable/textview_background"
                android:gravity="center"
                android:padding="15dp"
                android:textColor="@color/black"
                android:fontFamily="@font/opensans_regular"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:elevation="6dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/ic__three_dots"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_rec"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/location_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Location"
                android:background="@drawable/textview_background"
                android:gravity="center"
                android:padding="15dp"
                android:textColor="@color/black"
                android:fontFamily="@font/opensans_regular"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:elevation="6dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select mode of transport"
            android:paddingTop="15dp"
            android:paddingStart="15dp"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/car_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@drawable/textview_background"
                android:gravity="center"
                android:elevation="6dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:clickable="true">

                <ImageView
                    android:id="@+id/car_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_car"
                    android:clickable="true"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bike_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@drawable/textview_background"
                android:gravity="center"
                android:elevation="6dp"
                android:layout_weight="1"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/bike_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_motorbike"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/walk_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@drawable/textview_background"
                android:gravity="center"
                android:elevation="6dp"
                android:layout_weight="1"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/walk_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_walk"/>

            </LinearLayout>

        </LinearLayout>

    <TextView
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:fontFamily="@font/opensans_regular"
        android:textColor="@color/white"
        android:background="@drawable/text_background"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_gravity="center_horizontal"
        android:elevation="6dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>



</LinearLayout>